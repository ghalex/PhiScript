<?xml version="1.0" encoding="utf-8"?>
<View width="300" height="300">

	<HBox width="100%" 
		  height="100%"
		  backgroundColor="#FFFFFF"
		  horizontalAlign="center"
		  border="0">
		  
		  <Button text="CloseMe!" onClick="closePopUp()" />
		  
	</HBox/>
	
	<JavaScript>
		
		closePopUp: function()
		{
			var popUp = Phi.Mn.PopUpManager.getPopUpForView( this );
			popUp.hide();
		}
		
	</JavaScript>
</View>